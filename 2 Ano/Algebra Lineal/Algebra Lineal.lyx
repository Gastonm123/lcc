\begin_layout Subsection
Ley del paralelogramo
\end_layout

\begin_layout Paragraph
Enunciado
\end_layout

\begin_layout Standard
\begin_inset Formula $\left\Vert x+y\right\Vert ^{2}+\left\Vert x-y\right\Vert ^{2}=2\left(\left\Vert x\right\Vert ^{2}+\left\Vert y\right\Vert ^{2}\right)$
\end_inset

.
\end_layout

\begin_layout Paragraph
Demostracion
\end_layout

\begin_layout Itemize
\begin_inset Formula $\left\Vert x+y\right\Vert ^{2}=\left(x+y\right)\cdot\left(x+y\right)=x\cdot x+x\cdot y+y\cdot x+y\cdot y$
\end_inset

.
\end_layout

\begin_layout Itemize
\begin_inset Formula $\left\Vert x-y\right\Vert ^{2}=\left(x-y\right)\cdot\left(x-y\right)=x\cdot x-x\cdot y-y\cdot x+y\cdot y$
\end_inset

.
\end_layout

\begin_layout Itemize
\begin_inset Formula $\left\Vert x+y\right\Vert ^{2}+\left\Vert x+y\right\Vert ^{2}=x\cdot x+x\cdot x+y\cdot y+y\cdot y=2\left(\left\Vert x\right\Vert ^{2}+\left\Vert y\right\Vert ^{2}\right)$
\end_inset

.
\end_layout

\begin_layout Subsection
Teorema de Pitagoras
\end_layout

\begin_layout Paragraph
Enunciado
\end_layout

\begin_layout Standard
\begin_inset Formula $\left\Vert x+y\right\Vert ^{2}=\left\Vert x\right\Vert ^{2}+\left\Vert y\right\Vert ^{2}\iff x\cdot y=0$
\end_inset

.
\end_layout

\begin_layout Paragraph
Demostracion
\end_layout

\begin_layout Itemize
\begin_inset Formula $\boxed{\Rightarrow}$
\end_inset

:
\begin_inset Formula $\left\Vert x+y\right\Vert ^{2}-\left\Vert x\right\Vert ^{2}-\left\Vert y\right\Vert ^{2}=0\iff2\left(x\cdot y\right)=0\iff x\cdot y=0$
\end_inset

.
\end_layout

\begin_layout Itemize
\begin_inset Formula $\boxed{\Leftarrow}$
\end_inset

: 
\begin_inset Formula $\left\Vert x+y\right\Vert ^{2}=x\cdot x+\underbrace{x\cdot y}_{0}+\underbrace{y\cdot x}_{0}+y\cdot y=\left\Vert x\right\Vert ^{2}+\left\Vert y\right\Vert ^{2}$
\end_inset

.
\begin_inset Newpage pagebreak
\end_inset


\end_layout

\begin_layout Subsection
Desigualdad de Cauchy-Schwarz
\end_layout

\begin_layout Paragraph
Enunciado
\end_layout

\begin_layout Standard
\begin_inset Formula $\left|u\cdot v\right|\leq\left\Vert u\right\Vert \left\Vert v\right\Vert $
\end_inset

.
\end_layout

\begin_layout Paragraph
Demostracion
\end_layout

\begin_layout Standard
Si 
\begin_inset Formula $v=0$
\end_inset

 el teorema es trivialmente cierto, si no, sea 
\begin_inset Formula $\text{\ensuremath{\alpha=\frac{u\cdot v}{v\cdot v}}}$
\end_inset

, luego:
\begin_inset Formula 
\[
0\leq\left\Vert u-\alpha v\right\Vert ^{2}=u\cdot u-u\cdot\alpha v-\alpha v\cdot u+\alpha v\cdot\alpha v=u\cdot u-2\alpha\left(u\cdot v\right)+\alpha^{2}\left(v\cdot v\right)
\]

\end_inset

y reemplazando 
\begin_inset Formula $\left[\alpha\right]$
\end_inset

 tenemos:
\begin_inset Formula 
\[
0\leq\left\Vert u\right\Vert ^{2}-2\left[\frac{u\cdot v}{v\cdot v}\right]\left(u\cdot v\right)+\left[\frac{u\cdot v}{v\cdot v}\right]^{2}\left(v\cdot v\right)=\left\Vert u\right\Vert ^{2}-2\frac{\left(u\cdot v\right)^{2}}{\left\Vert v\right\Vert ^{2}}+\frac{\left(u\cdot v\right)^{2}}{\left\Vert v\right\Vert ^{2}}=\left\Vert u\right\Vert ^{2}-\frac{\left(u\cdot v\right)^{2}}{\left\Vert v\right\Vert ^{2}}
\]

\end_inset

Notemos que como 
\begin_inset Formula $u\cdot v\geq0$
\end_inset

 entonces 
\begin_inset Formula $u\cdot v=\left|u\cdot v\right|\iff\left(u\cdot v\right)^{2}=\left|u\cdot v\right|^{2}$
\end_inset

.
 En resumen:
\begin_inset Formula 
\[
0\leq\left\Vert u\right\Vert ^{2}-\frac{\left|u\cdot v\right|^{2}}{\left\Vert v\right\Vert ^{2}}\iff\frac{\left|u\cdot v\right|^{2}}{\left\Vert v\right\Vert ^{2}}\leq\left\Vert u\right\Vert ^{2}\iff\left|u\cdot v\right|^{2}\leq\left\Vert u\right\Vert ^{2}\left\Vert v\right\Vert ^{2}\iff\left|u\cdot v\right|\leq\left\Vert u\right\Vert \left\Vert v\right\Vert 
\]

\end_inset


\end_layout

\begin_layout Subsection
Desigualdad triangular
\end_layout

\begin_layout Paragraph
Enunciado
\end_layout

\begin_layout Standard
\begin_inset Formula $\left\Vert u+v\right\Vert \leq\left\Vert u\right\Vert +\left\Vert v\right\Vert $
\end_inset

.
\end_layout

\begin_layout Paragraph
Demostracion
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\left\Vert u+v\right\Vert ^{2}=\left\Vert u\right\Vert ^{2}+2\left(u\cdot v\right)+\left\Vert v\right\Vert ^{2}=\left\Vert u\right\Vert ^{2}+2\left|u\cdot v\right|+\left\Vert v\right\Vert ^{2}\leq\left\Vert u\right\Vert ^{2}+2\left\Vert u\right\Vert \cdot\left\Vert v\right\Vert +\left\Vert v\right\Vert ^{2}=\left(\left\Vert u\right\Vert +\left\Vert v\right\Vert \right)^{2}
\]

\end_inset

donde la desigualdad vale por el teorema anterior.
\end_layout

