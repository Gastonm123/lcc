\end_layout

\begin_layout Subsection
Determinacion de una TL por la actuacion en la base
\end_layout

\begin_layout Paragraph
Enunciado
\end_layout

\begin_layout Standard
Sea 
\begin_inset Formula $V$
\end_inset

 un espacio vectorial de dimension finita y 
\begin_inset Formula $\left\{ v_{1},\ldots,v_{n}\right\} $
\end_inset

 una base ordenada de 
\begin_inset Formula $V$
\end_inset

 y sean 
\begin_inset Formula $W$
\end_inset

 un espacio vectorial sobre el mismo cuerpo 
\begin_inset Formula $\mathbb{K}$
\end_inset

 y 
\begin_inset Formula $w_{1},\ldots,w_{n}\in W$
\end_inset

 entonces existe una unica 
\begin_inset Formula $T\in\mathcal{L}\left(V,W\right)/T\left(v_{i}\right)=w_{i}$
\end_inset

 con 
\begin_inset Formula $i\in\left\{ 1,\ldots,n\right\} $
\end_inset

.
\end_layout

\begin_layout Paragraph
Demostracion
\end_layout

\begin_layout Standard
Definamos 
\begin_inset Formula $T$
\end_inset

 sobre 
\begin_inset Formula $V$
\end_inset

: sea 
\begin_inset Formula $v\in V$
\end_inset

, sabemos que existe un unico vector 
\begin_inset Formula $\left(x_{1},\ldots,x_{n}\right)\in\mathbb{K}^{n}$
\end_inset

 tal que 
\begin_inset Formula $v=x_{1}v_{1}+\ldots+x_{n}v_{n}$
\end_inset

.
 Sea:
\begin_inset Formula 
\[
T\left(v\right)=x_{1}T\left(v_{1}\right)+\ldots+x_{n}T\left(v_{n}\right)=T\left(\sum_{i=1}^{n}x_{i}v_{i}\right)=\sum_{i=1}^{n}x_{i}T\left(v_{i}\right)=\sum_{i=1}^{n}x_{i}w_{i}
\]

\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $T$
\end_inset

 esta bien definida pues 
\begin_inset Formula $T\left(v_{i}\right)\in W$
\end_inset

.
\end_layout

\begin_layout Itemize
\begin_inset Formula $T$
\end_inset

 es lineal pues:
\end_layout

\begin_deeper
\begin_layout Itemize
\begin_inset Formula $T\left(u+v\right)=T\left({\displaystyle \sum_{i=1}^{n}x_{i}v_{i}+\sum_{i=1}^{n}y_{i}v_{i}}\right)=T\left[{\displaystyle \sum_{i=1}^{n}\left(x_{i}+y_{i}\right)v_{i}}\right]={\displaystyle \sum_{i=1}^{n}\left(x_{i}+y_{i}\right)T\left(v_{i}\right)}=$
\end_inset


\end_layout

\begin_deeper
\begin_layout Standard
\begin_inset Formula $={\displaystyle \sum_{i=1}^{n}\left(x_{i}+y_{i}\right)w_{i}=\sum_{i=1}^{n}x_{i}w_{i}+\sum_{i=1}^{n}y_{i}w_{i}=T\left(v\right)+T\left(w\right)}$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
\begin_inset Formula $T\left(\alpha v\right)=T\left({\displaystyle \sum_{i=1}^{n}\alpha x_{i}v_{i}}\right)={\displaystyle \sum_{i=1}^{n}}\alpha x_{i}T\left(v_{i}\right)=\alpha{\displaystyle \sum_{i=1}^{n}}x_{i}w_{i}=\alpha T\left(v\right)$
\end_inset


\end_layout

\end_deeper
\begin_layout Itemize
\begin_inset Formula $T$
\end_inset

 es unica: Supongamos 
\begin_inset Formula $S:V\to W$
\end_inset

 es una transformacion lineal tal que 
\begin_inset Formula $S\left(v_{i}\right)=w_{i}$
\end_inset

 para 
\begin_inset Formula $1\leq i\leq n$
\end_inset

.
 Luego para 
\begin_inset Formula $v\in V$
\end_inset

:
\begin_inset Formula 
\[
S\left(v\right)=S\left(\sum_{i=1}^{n}x_{i}v_{i}\right)=\sum_{i=1}^{n}x_{i}S\left(v_{i}\right)=\sum_{i=1}^{n}x_{i}w_{i}=\sum_{i=1}^{n}x_{i}T\left(v_{i}\right)=T\left(\sum_{i=1}^{n}x_{i}v_{i}\right)=T\left(v\right)
\]

\end_inset


\end_layout

\begin_layout Subsection
Inyectividad de una transformacion lineal
\end_layout

\begin_layout Paragraph
Enunciado
\end_layout

\begin_layout Standard
Sea 
\begin_inset Formula $T$
\end_inset

 una transformacion lineal, luego 
\begin_inset Formula $T$
\end_inset

 es inyectiva si y solo si 
\begin_inset Formula $\text{\ensuremath{\mathcal{N}\left(T\right)=\left\{ 0\right\} }}$
\end_inset

.
\end_layout

\begin_layout Paragraph
Demostracion
\end_layout

\begin_layout Itemize
\begin_inset Formula $\boxed{\Rightarrow}$
\end_inset

: Supongamos existe un vector 
\begin_inset Formula $\text{\ensuremath{v\in V/T\left(v\right)=0=T\left(0\right)\underbrace{\Rightarrow}_{\text{inyectiva}}v=0}}$
\end_inset

.
\end_layout

\begin_layout Itemize
\begin_inset Formula $\boxed{\Leftarrow}$
\end_inset

: Sean 
\begin_inset Formula $u,v\in V/T\left(u\right)=T\left(v\right)$
\end_inset

 luego:
\begin_inset Formula 
\[
T\left(u\right)-T\left(v\right)=0\Rightarrow T\left(u-v\right)=0\Rightarrow u-v\in\mathcal{N}\left(T\right)=\left\{ 0\right\} \Rightarrow u-v=0\Rightarrow u=v
\]

\end_inset


\end_layout

\begin_layout Subsection
Teorema de la dimension
\end_layout

\begin_layout Paragraph
Enunciado
\end_layout

\begin_layout Standard
Sean 
\begin_inset Formula $V,W$
\end_inset

 espacios vectoriales sobre 
\begin_inset Formula $\mathbb{K}$
\end_inset

 y 
\begin_inset Formula $T\in\mathcal{L}\left(V,W\right)$
\end_inset

 de dimension finita, entonces 
\begin_inset Formula $rang\left(T\right)+dim\left[\mathcal{N}\left(T\right)\right]=dim\left(V\right)$
\end_inset

.
\end_layout

\begin_layout Paragraph
Demostracion
\end_layout

\begin_layout Standard
Sea 
\begin_inset Formula $\left\{ v_{1},\ldots,v_{k}\right\} $
\end_inset

 una base de 
\begin_inset Formula $\mathcal{N}\left(T\right)$
\end_inset

, existen vectores 
\begin_inset Formula $v_{k+1},\ldots,v_{m}$
\end_inset

 tales que 
\begin_inset Formula $\left\{ v_{1},\ldots,v_{k},v_{k+1},\ldots,v_{m}\right\} $
\end_inset

 es base de 
\begin_inset Formula $V$
\end_inset

.
 Veamos que 
\begin_inset Formula $\left\{ T\left(v_{k+1}\right),\ldots,T\left(v_{m}\right)\right\} $
\end_inset

 es una base de 
\begin_inset Formula $img\left(T\right)$
\end_inset

.
\end_layout

\begin_layout Standard
Los vectores 
\begin_inset Formula $T\left(v_{1}\right),\ldots,T\left(v_{m}\right)$
\end_inset

 generan 
\begin_inset Formula $img\left(T\right)$
\end_inset

 pues sea 
\begin_inset Formula $y\in img\left(T\right)$
\end_inset

 luego 
\begin_inset Formula $\exists v\in V/T\left(v\right)=y$
\end_inset

.
 Como 
\begin_inset Formula $v\in V$
\end_inset

 existen escalares 
\begin_inset Formula $\text{\ensuremath{\alpha_{1},\ldots,\alpha_{m}\in\mathbb{K}/v={\displaystyle \sum_{j=1}^{m}\alpha_{j}v_{j}}}}$
\end_inset

, luego 
\begin_inset Formula $y=T\left({\displaystyle \sum_{j=1}^{m}\alpha_{j}v_{j}}\right)={\displaystyle \sum_{j=1}^{m}\alpha_{j}T\left(v_{j}\right)}$
\end_inset

.
 Para 
\begin_inset Formula $1<j<k$
\end_inset

 se tiene que 
\begin_inset Formula $T\left(v_{j}\right)=0$
\end_inset

 (por ser vectores de 
\begin_inset Formula $\mathcal{N}\left(T\right)$
\end_inset

) por lo tanto 
\begin_inset Formula $y={\displaystyle \sum_{j=k+1}^{m}\alpha_{j}T\left(v_{j}\right)}$
\end_inset

 concluyendo que 
\begin_inset Formula $T\left(v_{k+1}\right),\ldots,T\left(v_{m}\right)$
\end_inset

 generan 
\begin_inset Formula $img\left(T\right)$
\end_inset

.
 Debemos ver ahora que son linealmente independientes.
\end_layout

\begin_layout Standard
Supongamos existen escalares 
\begin_inset Formula $c_{i}\in\mathbb{K}$
\end_inset

 tales que 
\begin_inset Formula $0={\displaystyle \sum_{i=k+1}^{m}c_{i}T\left(v_{i}\right)=T\left(\sum_{i=k+1}^{m}c_{i}v_{i}\right)}$
\end_inset

, es decir que 
\begin_inset Formula $v={\displaystyle \sum_{i=k+1}^{m}c_{i}v_{i}\in\mathcal{N}\left(T\right)}$
\end_inset

.
 Como 
\begin_inset Formula $\left\{ v_{1},\ldots,v_{k}\right\} $
\end_inset

 es base de 
\begin_inset Formula $\mathcal{N}\left(T\right)$
\end_inset

 tambien existen escalares 
\begin_inset Formula $b_{i}\in\mathbb{K}$
\end_inset

 tales que 
\begin_inset Formula $\text{\ensuremath{v={\displaystyle \sum_{i=1}^{k}b_{i}v_{i}}}}\in\mathcal{N}\left(T\right)$
\end_inset

.
 Luego 
\begin_inset Formula $0=v-v={\displaystyle \sum_{i=1}^{k}b_{i}v_{i}}-{\displaystyle \sum_{i=k+1}^{m}c_{i}v_{i}}$
\end_inset

 y como 
\begin_inset Formula $\left\{ v_{1},\ldots,v_{k},v_{k+1},\ldots,v_{m}\right\} $
\end_inset

 son linealmente independientes por ser base de 
\begin_inset Formula $V$
\end_inset

 resulta que 
\begin_inset Formula $b_{i}=c_{i}=0$
\end_inset

.
 Por lo tanto 
\begin_inset Formula $\left\{ T\left(v_{k+1}\right),\ldots,T\left(v_{m}\right)\right\} $
\end_inset

 es base de 
\begin_inset Formula $img\left(T\right)$
\end_inset

.
\end_layout

\begin_layout Itemize
\begin_inset Formula $rang\left(T\right)=dim\left[img\left(T\right)\right]=m-k$
\end_inset

 .
\end_layout

\begin_layout Itemize
\begin_inset Formula $dim\left(V\right)=m=k+\left(m-k\right)=dim\left[\mathcal{N}\left(T\right)\right]+rang\left(T\right)$
\end_inset

.
\end_layout

\begin_layout Subsection
