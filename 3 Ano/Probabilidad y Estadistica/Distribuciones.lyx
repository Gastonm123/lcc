\begin_layout Standard
\begin_inset Formula 
\[
\sum_{i\in R_{X}}P\left(X=i\right)=\sum_{i=0}^{n}\binom{n}{i}p^{i}q^{n-i}\underbrace{=}_{1}\left(p+q\right)^{n}=1^{n}=1
\]

\end_inset


\end_layout

\begin_layout Section
Esperanza
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\begin{aligned}E\left(X\right)= & \sum_{i\in R_{X}}iP\left(X=i\right)=\sum_{i=0}^{n}i\binom{n}{i}p^{i}q^{n-i}=\sum_{i=0}^{n}i\binom{n}{i}p^{i}\left(1-p\right)^{n-i}=\\
= & \sum_{i=1}^{n}i\frac{n!}{i!\left(n-i\right)!}p^{i}\left(1-p\right)^{n-i}=\sum_{i=1}^{n}\frac{n!}{\left(i-1\right)!\left(n-i\right)!}p^{i}\left(1-p\right)^{n-i}=\\
= & \sum_{i=0}^{n-1}\frac{n!}{i!\left(n-\left[i+1\right]\right)!}p^{i+1}\left(1-p\right)^{n-\left(i+1\right)}=\sum_{i=0}^{n-1}\frac{n\left(n-1\right)!}{i!\left(n-i-1\right)!}pp^{i}\left(1-p\right)^{n-i-1}=\\
= & np\sum_{i=0}^{n-1}\frac{\left(n-1\right)!}{i!\left(n-i-1\right)!}p^{i}\left(1-p\right)^{n-i-1}=np\sum_{i=0}^{n-1}\binom{n-1}{i}p^{i}\left(1-p\right)^{n-i-1}=\\
\underbrace{=}_{1} & np\left[p+\left(1-p\right)\right]^{n-1}=np
\end{aligned}
\]

\end_inset


\end_layout

\begin_layout Paragraph
Alternativa
\end_layout

\begin_layout Standard
Si 
\begin_inset Formula $X\sim B\left(n,p\right)$
\end_inset

 podemos expresar a 
\begin_inset Formula $X$
\end_inset

 como suma de 
\begin_inset Formula $n$
\end_inset

 variables de Bernoulli 
\begin_inset Formula $Y_{i}$
\end_inset

, es decir: 
\begin_inset Formula $X={\displaystyle \sum_{i=1}^{n}}Y_{i}$
\end_inset

.
 Luego:
\begin_inset Formula 
\[
E\left(X\right)=E\left[\sum_{i=1}^{n}Y_{i}\right]=\sum_{i=1}^{n}E\left(Y_{i}\right)=\sum_{i=1}^{n}p=np
\]

\end_inset


\end_layout

\begin_layout Section
Variancia y desvió estándar
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
V\left(Y_{i}\right)=E\left(Y_{i}^{2}\right)-\left[E\left(Y_{i}\right)^{2}\right]=p-p^{2}=p\left(1-p\right)=pq
\]

\end_inset


\begin_inset Formula 
\[
V\left(X\right)=V\left[\sum_{i=1}^{n}Y_{i}\right]\underbrace{=}\sum_{i=1}^{n}V\left(Y_{i}\right)=\sum_{i=1}^{n}pq=npq
\]

\end_inset


\begin_inset Formula 
\[
\sigma_{X}=\sqrt{npq}
\]

\end_inset


\end_layout

